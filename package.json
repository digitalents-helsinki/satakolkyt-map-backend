{
  "name": "satakolkyt-map-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "author": "Digitalents Helsinki",
  "contributors": [
    "Omar Benchbana",
    "Samu Suvanto",
    "Vesa Meril√§inen <vesa.merilainen@digitalentshelsinki.fi>"
  ],
  "scripts": {
    "db:start": "./start.sh satakolkyt",
    "db:populate-geojson": "node ./scripts/populate-db.js",
    "docker:start": "docker exec -it expresssatakolkyt yarn db:start ",
    "docker:populate-geojson": "docker exec -it expresssatakolkyt yarn db:populate-geojson",
    "watch": "yarn build --watch",
    "nodemon": "nodemon --signal SIGHUP dist/index.js -q",
    "dev": "yarn run build && run-p nodemon watch",
    "build": "tsc",
    "docker:build": "docker-compose -f docker-compose.prod.yaml up  -d --build --remove-orphans"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "src/*"
    ],
    "delay": 1000,
    "verbose": false
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/geojson": "^7946.0.7",
    "@types/node": "^11.9.5",
    "husky": ">=1",
    "lint-staged": ">=8",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "arangojs": "^6.10.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-github-webhook": "^1.0.6",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.0",
    "moment": "^2.24.0",
    "nodemailer": "^6.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write"
    ]
  }
}
