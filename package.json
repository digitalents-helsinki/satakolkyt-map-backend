{
  "name": "satakolkyt-map-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "db:start": "./start.sh satakolkyt",
    "db:populate-geojson": "node ./scripts/populate-db.js",
    "build": "tsc",
    "watch": "yarn build --watch",
    "nodemon": "nodemon --signal SIGHUP dist/index.js -q",
    "dev": "yarn run build && run-p nodemon watch"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "src/*"
    ],
    "delay": 1000,
    "verbose": false
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/geojson": "^7946.0.7",
    "@types/node": "^11.9.5",
    "husky": ">=1",
    "lint-staged": ">=8",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@sentry/node": "^5.1.0",
    "arangojs": "^6.10.0",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
